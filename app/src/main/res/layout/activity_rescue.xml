<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RescueActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Rescue Details"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:text="Name: "
        android:textColor="#000"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/RuserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/a"
        android:layout_marginTop="80dp"
        android:layout_marginStart="5dp"
        android:text="userName"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/a"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="Animal Type: "
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Ranimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/b"
        android:layout_alignBottom="@id/b"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="animal type"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:padding="5dp"
        android:text="Location: "
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Rlocation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/c"
        android:layout_alignTop="@id/c"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="animal location"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/c"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="99dp"
        android:padding="5dp"
        android:text="Phone No: "
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Rphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/d"
        android:layout_alignBottom="@id/d"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="User phone no"
        android:padding="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/d"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="59dp"
        android:padding="5dp"
        android:text="Coordinates: "
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Rlatlng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/e"
        android:layout_alignBottom="@id/e"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Latitiude , Longitude"
        android:padding="5dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/BtnRescueLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogOut"
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />


</RelativeLayout>